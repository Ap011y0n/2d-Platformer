<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>
  
  <audio>
    <music>
      <folder>audio/music/</folder>
      <volume value="0.05" />
    </music>
    <fx>
      <folder>audio/fx/</folder>
      <volume value="60" />
    </fx>
  </audio>
  
  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>
  
  <player>
   <moveFx source="move.wav"/>
   <deathFx source="death.wav"/>
   <jumpFx source="jump.wav"/>
   <winFx source="win.wav"/>
   <initialPosition x="120" y="350"/>
   <gravity value="11"/>
   <speedX value="7"/>
   <speedY value="22"/>
   <acceleration value="20"/>
   <speedBar value="0.2"/>
  </player>

   <scene>
     <map name="maplevel1.tmx"/>
     <map name="maplevel2.tmx"/>
   </scene>
</config>